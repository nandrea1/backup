{
  "manifest_version" : 2,
  "name": "Pandora's Box",
  "version": "2.0",
  "description": "This extension allows you to save your favorite songs to Grooveshark",
  "permissions": ["tabs", "*://*.pandora.com/*"],
  "background": {
    "page": "pandora.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.pandora.com/*"],
      "js": ["pandora.js"]
    }
  ]
}